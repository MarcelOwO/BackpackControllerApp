<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BackpackControllerApp"
             x:Class="BackpackControllerApp.MainPage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label
            Text="BackpackController"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />
        <HorizontalStackLayout>
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"/>
            <Label Text="{Binding BluetoothStatus}">
            </Label>
        </HorizontalStackLayout>
        <Button
            x:Name="UploadButtone"
            Text="Upload File"
            Clicked="UploadFile"
            HorizontalOptions="Fill" />
        <Label Text="Uploaded files:" />
        <CollectionView ItemsSource="{Binding UploadedFiles}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button
                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPage}}, Path=BindingContext.ImageCommand}"
                        CommandParameter="{Binding ImageLink}">
                        <Image
                            Source="{Binding ImageLink}"
                            HeightRequest="100"
                            Aspect="AspectFit" />
                    </Button>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>