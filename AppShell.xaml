<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BackpackControllerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BackpackControllerApp"
    xmlns:pages="clr-namespace:BackpackControllerApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="BackpackControllerApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Log"
        ContentTemplate="{DataTemplate pages:LogPage}"
        Route="Log"/>
</Shell>
